<!-- id, breed, size, coat, color, description, image, lifespan, food -->

<% include ../views/layout %>

<h1>Edit Breed Info</h1>
<form name="editbreed" method="POST" action="/editbreed">
    <input type="text" name="id" placeholder="id" value="<%= id%>" hidden="true" />
    <br />
    <input type="text" name="breed" placeholder="breed" value="<%= breed%>" />
    <br />
    <input type="text" name="size" placeholder="size" value="<%= size%>" />
    <br />
    <input type="text" name="coat" placeholder="coat" value="<%= coat%>" />
    <br />
    <input type="text" name="description" placeholder="description" value="<%= description%>" />
    <br />
    <input type="text" name="image" placeholder="image" value="<%= image%>" />
    <br />
    <input type="text" name="lifespan" placeholder="lifespan" value="<%= lifespan%>" />
    <br />
    <input type="text" name="food" placeholder="food" value="<%= food%>" />
    <br />
    <input type="number" name="activitylevel" placeholder="activitylevel" value="<%=activitylevel%>" />
    <br />
    <input type="number" name="playfulness" placeholder="playfulness" value="<%=playfulness%>"/>
    <br />
    <input type="number" name="friendliness" placeholder="friendliness" value="<%=friendliness%>" />
    <br />
    <input type="number" name="intelligence" placeholder="intelligence" value="<%=intelligence%>" />
    <br />
    <input type="number" name="independence" placeholder="independence" value="<%=independence%>"/>
    <br />
    <br/>
    <input type="submit" value="Edit Breed" class="btn btn-outline-primary btn-sm" />
</form>
