<!-- id, name, birthday, mom, dad, gender, description, price, available -->
<% include ../views/layout %>

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
  </head>
  <body>
  
    <section class="hero is-warning is-fixed-top">
      <div class="hero-body">
        <div class="container">
          <h1 class="title">
            <%= name %>
          </h1>
          <h2 class="subtitle">
            Kitten
          </h2>
        </div>
      </div>
    </section>

    <br/>
<div class="container container-fluid">
    <img src="<%=image%>" class="rounded mx-auto d-block"/>
    <br/>
    
    <div class="card w-75 mx-auto" >
      <div class="card-content">
        <div class="content">
          <div class="d-flex flex-row justify-content-between">
            <i class="fa fa-birthday-cake align-self-center d-flex flex-row" aria-hidden="true"><p class="lead text-muted pl-3">  Birthday: </p></i>
            <p class="lead"> <%=birthday%></p>
          </div>
          <div class="d-flex flex-row justify-content-between">
            <i class="fas fa-cat align-self-center d-flex flex-row"><p class="lead text-muted pl-3">  Mom: </p></i>
            <p class="lead"> <%=mom%></p>
          </div>
          <div class="d-flex flex-row justify-content-between">
            <i class="fas fa-cat align-self-center d-flex flex-row"><p class="lead text-muted pl-3">  Dad: </p></i>
            <p class="lead"> <%=dad%></p>
          </div>
          <div class="d-flex flex-row justify-content-between">
            <i class="fas fa-venus-mars align-self-center d-flex flex-row"><p class="lead text-muted pl-2">  Gender: </p></i>
            <p class="lead"> <%=gender%></p>
          </div>
          <div class="d-flex flex-row justify-content-between">
            <i class="fas fa-pencil-alt align-self-center d-flex flex-row"><p class="lead text-muted pl-3">  Description: </p></i>
            <p class="lead"> <%=description%></p>
          </div>
          <div class="d-flex flex-row justify-content-between">
            <i class="fas fa-tags align-self-center d-flex flex-row"><p class="lead text-muted pl-2">  Price: </p></i>
            <p class="lead"> <%=price%></p>
          </div>
          <div class="d-flex flex-row justify-content-between">
            <i class="far fa-check-square align-self-center d-flex flex-row"><p class="lead text-muted pl-3">  Available: </p></i>
            <p class="lead"> <%=available%></p>
          </div>
        </div>
      </div>
    </div>
    <br />
<div class="card mx-auto w-25 d-flex flex-row justify-content-around p-4">
  <button class="btn btn-primary"><a class="editkitten text-light" href="/editkitten/<%=id%>">Edit</a></button>
  <button class="btn btn-danger"><a class="deletekitten text-light" href="" data-id="<%=id%>">Delete</a></button>
</div>
<br/>
</div>
</body>
</html>